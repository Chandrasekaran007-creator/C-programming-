
PROFIT CALCULATOR
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int x,a,b;
    float profit;
    scanf("%d%d%d",&x,&a,&b);
    profit= ((x*a)-(x*b))-100;
    printf("Number of copies sold:%d\n",x);
    printf("Cost of each copy:%d\n",a);
    printf("Cost spent by agency on each newspaper:%d\n",b);
    printf("The profit obtained is Rs.%0.2f",profit);
    

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
