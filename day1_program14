Cricket stadium
#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int l,b,w;
    int area,peri;
    scanf("%d%d",&l,&b);
    area = l*b;
    w = area/l;
    peri = (l+w)*2;
    printf("%d\n",peri);
    printf("%d",area);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}
